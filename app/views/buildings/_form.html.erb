<%= form_for @building do |f| %>
    <% if flash[:building_errors] %>
        <% flash[:building_errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
    <% end %>

    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :country %><br>
    <%= f.text_field :country %><br>
    
    <%= f.label :address %><br>
    <%= f.text_area :address %><br>
    
    <%= f.label :rent_per_floor %><br>
    <%= f.text_field :rent_per_floor %><br>
    
    <%= f.label :number_of_floors %><br>
    <%= f.text_field :number_of_floors %><br>

    <%= f.submit %>
<% end %>

<%= button_to "Delete Building", building_path, method: :delete %>